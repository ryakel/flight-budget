# Flight Budget Configuration
# Copy this file to .env and customize for your deployment

# App Settings
APP_PORT=8181
TIMEZONE=America/New_York

# FAA Aircraft Lookup Feature
# ⚠️ WARNING: ARLA API integration is NOT YET IMPLEMENTED
# The feature is disabled due to memory constraints during FAA data import.
# A lightweight fork is planned for future implementation.
#
# For now, ALWAYS use: ENABLE_FAA_LOOKUP=false
# This uses ForeFlight CSV data only (fully functional)
ENABLE_FAA_LOOKUP=false

# ARLA API Database Connection (NOT CURRENTLY FUNCTIONAL)
# ⚠️ These settings are for future use only when ARLA is implemented
# Do not enable - will fail due to memory constraints

# Option 1: Self-hosted PostgreSQL (NOT YET IMPLEMENTED)
ENABLE_POSTGRES=false
